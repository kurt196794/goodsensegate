<%= form_with model: @user, url:user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Login
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">email<a class="asterisk" href="#">※</a></label>
      <%# <span class="indispensable">必須</span> %>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password<a class="asterisk" href="#">※</a></label>
      <%# <span class="indispensable">必須</span> %>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"半角英数字６文字以上" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "Login" ,class:"login-red-btn" %>
    <%=link_to '戻る', root_path, class:"register-re-btn" %>
  </div>
</div>
<% end %>

